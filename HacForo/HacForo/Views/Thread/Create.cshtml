@model HacForo.Models.DTOs.ThreadDTO
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Create</h2>
@using (Html.BeginForm("Create", "Thread", FormMethod.Post))
{
    @Html.ValidationSummary(true, "Registeration Failed, fields.");
    <div>
        <fieldset>
            <legend>New Thread</legend>
            <div class="editor-label">Title</div>
            <div class="editor-field">
                @Html.TextBoxFor(t => t.Title)
            </div>
            <div class="editor-label">Picture</div>
            <div class="editor-field">
                @Html.TextBoxFor(t => t.ImageLink)
            </div>
            <div class="editor-label">Description</div>
            <div class="editor-field">
                @Html.TextAreaFor(t => t.Description)
            </div>
            <input type="submit" value="Create" class="btn btn-default" />
        </fieldset>
    </div>
}


<script src="~/scripts/tinymce/tinymce.min.js"></script>
<!-- Script to wire up your TinyMCE editor -->
<script type="text/javascript">
        // Initialize your tinyMCE Editor with your preferred options
    tinymce.init({
        selector: 'textarea',
        height: 500,
        menubar: false,
        plugins: [
          'advlist autolink lists link image charmap print preview anchor',
          'searchreplace visualblocks code fullscreen',
          'insertdatetime media table contextmenu paste code'
        ],
        toolbar: 'undo redo | insert | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image',
        content_css: [
          '//fonts.googleapis.com/css?family=Lato:300,300i,400,400i',
          '//www.tinymce.com/css/codepen.min.css']
    });
</script>

