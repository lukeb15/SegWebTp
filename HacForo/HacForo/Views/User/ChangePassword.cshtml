@model HacForo.Models.DTOs.ChangePasswordDTO
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>LogIn</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Login Failed, check details");
    <div>
        <fieldset>
            <legend>Change Password</legend>
            <div class="editor-label">@Html.LabelFor(u => u.Password)</div>
            <div class="editor-field">
                @Html.PasswordFor(u => u.Password)
                @Html.ValidationMessageFor(u => u.Password)
            </div>         
            <input type="submit" value="Change Password" class="btn btn-warning" onclick="return confirm('Are you sure?')" /> 
        </fieldset>
    </div>
}

